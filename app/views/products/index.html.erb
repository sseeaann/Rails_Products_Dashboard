<div class="container">
	<h1>Listing products</h1>
	<a href="/products/new" class="btn btn-primary">Add New Product</a>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<td>Name</td>
				<td>Description</td>
				<td>Price</td>
				<td>Category</td>
				<td>Actions</td>
			</tr>
		</thead>
		<tbody>
		<% @products.each do |product| %>
			<tr>
				<td class="vert-align"><%= product.name %></td>
				<td class="vert-align"><%= product.description %></td>
				<td class="vert-align">$<%= product.pricing %></td>
				<td class="vert-align"><%= product.category.name %></td>
				<td class="vert-align"><a href="/products/<%= product[:id] %>" class="btn btn-info">Show</a> <a href="/products/<%= product[:id] %>/edit" class="btn btn-warning">Edit</a> 
				<form action="/products/<%= product[:id]%>" method="post" class="deleteForm">
					<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
					<input type="hidden" name="_method" value="delete">
					<input type="submit" class="btn btn-danger" value="Delete">
				</form>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>